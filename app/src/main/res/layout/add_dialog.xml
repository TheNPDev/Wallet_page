<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Money to Wallet"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#179CAE"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="#21D3D3" 
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹"
        android:textSize="45dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#21D3D3"
        android:layout_alignStart="@+id/enter"
        android:layout_below="@id/enter"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="45sp"
        android:textColor="#21D3D3"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enter"
        android:layout_toRightOf="@+id/rupee"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        android:inputType="number"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@id/rupee"
        android:text="ADD"
        android:textSize="20sp"
        android:background="@drawable/add_back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>